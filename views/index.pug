    script.
      function popupOpen(){
      var popUrl = "findId";	//팝업창에 출력될 페이지 URL
      var popOption = "width=330, height=147, left=500, top=50, resizable=no, scrollbars=no, status=no;";    //팝업창 옵션(optoin)
      window.open(popUrl,"ID/PASS 확인 창",popOption);
      }
  body
    .limiter
      .container-login100
        .wrap-login100
          .login100-pic.js-tilt(data-tilt='')
            img(src='images/img-01.jpg', alt='IMG')
          form.login100-form.validate-form(action='login', method='post')
            span.login100-form-title
              | Human Login
            .wrap-input100.validate-input(data-validate='Student ID is required')
              input.input100(type='text', name='user_id', placeholder='Student ID')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-envelope(aria-hidden='true')
            .wrap-input100.validate-input(data-validate='Password is required')
              input.input100(type='password', name='user_password', placeholder='Password')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-lock(aria-hidden='true')
            .container-login100-form-btn
              button.login100-form-btn
                | Login
            .text-center.p-t-12
              span.txt1
                | Forgot
              a.txt2(href='javascript:popupOpen();')
                | Student ID / Password?
            .text-center.p-t-136
