          include menu_student.pug
          .right-view
            form(action='saveBase64', method='post')
              h4 휴가 신청 내역 확인
              hr
              table
                tr
                  td 휴가 날짜 
                  td
                    input(type='text', name='rest_date', value=rest_date, readonly='readonly')
                tr
                  td 휴가 사유 
                  td
                    input(type='text', name='rest_reason', value=rest_reason, readonly='readonly')
                tr
                  td 학생 서명
                  td
                    img(src=sign_src, width='100', height='30')
                    input(type='hidden', name='imgBase64', value=sign_src, readonly='readonly')
                tr
                  td
                    input.enter(type='submit', value='등록하기')
                  td
                    input.enter(type='button', value='취소하기', onclick="location.href='RestReport'")
